@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NFL Stats Hub</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    /* Header Styles */
    .header {
        background-color: #013369;
        padding: 1rem 0;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 2rem;
    }

    .logo {
        color: white;
        font-size: 1.5rem;
        font-weight: 700;
        text-decoration: none;
    }

    .nav-links {
        display: flex;
        gap: 2rem;
    }

    .nav-link {
        color: white;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .nav-link:hover {
        color: #D50A0A;
    }

    /* Main Content Styles */
    .main-content {
        flex: 1;
        margin-top: 80px;
        margin-bottom: 60px;
    }

    /* Hero Section Styles */
    .hero-section {
        position: relative;
        height: 600px;
        overflow: hidden;
    }

    .hero-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.7);
    }

    .hero-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: white;
        width: 80%;
        max-width: 800px;
    }

    .hero-text h1 {
        font-size: 3rem;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }

    .hero-text p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
        line-height: 1.6;
    }

    /* Search Form Styles */
    .hero-search-form {
        margin-top: 2rem;
    }

    .search-container {
        display: flex;
        gap: 1rem;
        justify-content: center;
        align-items: flex-end;
        background-color: rgba(255, 255, 255, 0.1);
        padding: 1.5rem;
        border-radius: 10px;
        backdrop-filter: blur(5px);
    }

    .input-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .input-group label {
        color: white;
        font-size: 0.9rem;
        font-weight: 500;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
    }

    .search-input {
        width: 100px;
        padding: 0.75rem;
        border: 2px solid transparent;
        border-radius: 5px;
        font-size: 1rem;
        background-color: white;
        transition: all 0.3s ease;
    }

    .search-input:focus {
        outline: none;
        border-color: #D50A0A;
        box-shadow: 0 0 0 2px rgba(213, 10, 10, 0.2);
    }

    .search-input:invalid {
        border-color: #D50A0A;
    }

    .cta-button {
        padding: 0.75rem 2rem;
        background-color: #D50A0A;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .cta-button:hover {
        background-color: #b30909;
        transform: translateY(-2px);
    }

    /* Features Section */
    .features-section {
        padding: 4rem 2rem;
        background-color: #f5f5f5;
    }

    .features-container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .feature-card {
        background: white;
        padding: 2rem;
        border-radius: 10px;
        text-align: center;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
    }

    .feature-card h3 {
        color: #013369;
        margin-bottom: 1rem;
    }

    /* Footer Styles */
    .footer {
        background-color: #013369;
        color: white;
        padding: 1rem 0;
        text-align: center;
        margin-top: auto;
    }

    .footer-link {
        color: white;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .footer-link:hover {
        color: #D50A0A;
    }

    /* Responsive Styles */
    @@media (max-width: 768px) {
        .hero-text h1 {
            font-size: 2rem;
        }

        .hero-text p {
            font-size: 1rem;
        }

        .search-container {
            flex-direction: column;
            align-items: stretch;
            gap: 1rem;
        }

        .search-input {
            width: 100%;
        }

        .cta-button {
            width: 100%;
        }
    }
</style>
</head>
<body>
    <!-- Header -->
    <header class="header">
    <nav class="nav-container">
        <a href="/" class="logo">NFL Stats Hub</a>
        <div class="nav-links">
            <a href="/" class="nav-link">Home</a>
            <a href="@Url.Action("About", "Home")" class="nav-link">About Us</a>
        </div>
    </nav>
</header>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Hero Section -->
        <section class="hero-section">
            <img src="~/assets/nfl-hero.jpg" alt="NFL Stadium" class="hero-image">
            <div class="hero-text">
                <h1>Welcome to NFL Stats Hub</h1>
                <p>Your one-stop destination for comprehensive NFL game statistics, real-time updates, and detailed analysis. 
                   Track scores, view game details, and engage with other fans through our interactive platform.</p>
                
                <form id="gameSearchForm" class="hero-search-form" method="get" action="@Url.Action("GameOverview", "GameOverview")">
                    <div class="search-container">
                        <div class="input-group">
                            <label for="gameWeek">Game Week</label>
                            <input type="number" id="gameWeek" name="gameWeek" min="1" max="18" required
                                   class="search-input" placeholder="1-18" value="1">
                        </div>
                        <div class="input-group">
                            <label for="season">Season</label>
                            <input type="number" id="season" name="season" min="2022" required
                                   class="search-input" placeholder="2022+" value="2024">
                        </div>
                        <button type="submit" class="cta-button">Explore Games</button>
                    </div>
                </form>
            </div>
        </section>

        <!-- Features Section -->
        <section class="features-section">
            <div class="features-container">
                <div class="feature-card">
                    <h3>Live Game Stats</h3>
                    <p>Access comprehensive statistics for every NFL game, including scores, player performance, and team statistics.</p>
                </div>
                <div class="feature-card">
                    <h3>Interactive Experience</h3>
                    <p>Engage with other fans through our comment system and share your thoughts on each game.</p>
                </div>
                <div class="feature-card">
                    <h3>Detailed Analysis</h3>
                    <p>View quarter-by-quarter breakdowns, team comparisons, and in-depth game analysis.</p>
                </div>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <p>Data Source: <a href="https://www.tank01.com/" target="_blank" class="footer-link">Tank01</a></p>
    </footer>

    <!-- Form Validation Script -->
    <script>
        document.getElementById('gameSearchForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const gameWeek = parseInt(document.getElementById('gameWeek').value);
            const season = parseInt(document.getElementById('season').value);
            
            if (gameWeek < 1 || gameWeek > 18) {
                alert('Game week must be between 1 and 18');
                return;
            }
            
            if (season < 2022) {
                alert('Season must be 2022 or later');
                return;
            }
            
            this.submit();
        });
    </script>
</body>
</html>